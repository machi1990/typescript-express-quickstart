{
  "name": "typescript-express-quickstart",
  "version": "1.0.0",
  "author": {
    "name": "Manyanda Chitimbo",
    "email": "mchitimbo@octo.com"
  },
  "description": "ExpressJS quickstart in TypeScript using inversify as an inversion of control container.",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "prestart.watch": "tsc --watch &",
    "start.watch": "nodemon ./bin/www",
    "build": "tsc",
    "test": "jest",
    "precommit": "pretty-quick --staged"
  },
  "dependencies": {
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.15.5",
    "inversify": "^4.10.0",
    "inversify-express-utils": "^5.2.1",
    "morgan": "~1.9.0",
    "prettyjson": "^1.2.1",
    "reflect-metadata": "^0.1.12"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.2",
    "@types/prettyjson": "0.0.28",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.4.1",
    "ts-jest": "^22.0.4",
    "ts-mockito": "^2.2.9",
    "typescript": "^2.5.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "license": "MIT"
}
